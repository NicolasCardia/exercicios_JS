    <script>
     var meuArray = [];
var mensagemUser = prompt('digite sua mensagem.');
var deslocamentoUser = parseInt(prompt('Quantas casas quer avan√ßar.'));

function decrepitar(mensagem, deslocamento) {
    
    for (var i = 0; i < mensagem.length; i++) {
        meuArray.push(mensagem[i].charCodeAt(0) + deslocamento);
        console.log(String.fromCharCode(meuArray[i]));
    }
}

decrepitar(mensagemUser, deslocamentoUser);
        

    </script>
